{
  "pre-commit": {
    "enabled": true,
    "actions": [
      {
        "action": "sh -c 'FILES=\"{$STAGED_FILES|of-type:php|separated-by: }\"; if [ -n \"$FILES\" ]; then vendor/bin/phpcbf --standard=phpcs.xml $FILES && git add $FILES; fi'",
        "config": {
          "run-mode": "local"
        }
      },
      {
        "action": "npx lint-staged",
        "config": {
          "run-mode": "local"
        }
      },
      {
        "action": "npx tsc --noEmit",
        "config": {
          "run-mode": "local"
        }
      }
    ]
  },
  "pre-push": {
    "enabled": true,
    "actions": [
      {
        "action": "composer phpstan",
        "config": {
          "run-mode": "docker"
        }
      },
      {
        "action": "npm run test:unit:run",
        "config": {
          "run-mode": "local"
        }
      }
    ]
  },
  "commit-msg": {
    "enabled": false,
    "actions": []
  }
}
