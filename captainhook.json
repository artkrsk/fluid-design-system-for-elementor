{
  "pre-commit": {
    "enabled": true,
    "actions": [
      {
        "action": "composer fix",
        "config": {
          "run-mode": "docker"
        }
      },
      {
        "action": "npm run format",
        "config": {
          "run-mode": "local"
        }
      },
      {
        "action": "npx tsc --noEmit",
        "config": {
          "run-mode": "local"
        }
      }
    ]
  },
  "pre-push": {
    "enabled": true,
    "actions": [
      {
        "action": "composer phpstan",
        "config": {
          "run-mode": "docker"
        }
      },
      {
        "action": "npm run test:unit:run",
        "config": {
          "run-mode": "local"
        }
      }
    ]
  },
  "commit-msg": {
    "enabled": false,
    "actions": []
  }
}
